<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <AssemblyName>fm-wrapper</AssemblyName>
    <RootNamespace>FluentMigratorWrapper</RootNamespace>
      <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>

    
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>fm-wrapper</ToolCommandName>
    <PackageId>FluentMigratorWrapper</PackageId>
    <Version>1.0.0</Version>
    <Authors>L1NDS0N</Authors>
    <Description>Wrapper CLI for FluentMigrator with support to JSON configuration files</Description>
    
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>    
    <PackageReference Include="FluentMigrator" Version="7.2.0" />
    <PackageReference Include="FluentMigrator.Runner" Version="7.2.0" />
    
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="8.0.0" />    
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
  </ItemGroup>

</Project>